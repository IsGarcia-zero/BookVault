<!DOCTYPE html>
<html>
<head>
  <title>Bienvenido</title>
  <link rel="stylesheet" type="text/css" href="stylesheets/styles_index.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <meta name="viewport" content="width=device-width, initial-scale= 0.1">
</head>
<body>
  <header>
    <div class="hamburguesa">
        <label for = "" class="icon-menu"></label> 
    </div>
    <nav>
      <ul>
        <li class = "logo">Book Valut</li>

        <div class="items">
            <li><a href="#carrusel1">Carrusel 1</a></li>
            <li><a href="#carrusel2">Carrusel 2</a></li>
            <li><a href="#carrusel3">Carrusel 3</a></li>
            <li><a href="#carrusel4">Carrusel 4</a></li>
        </div>
        <li class="BUSCADOR">
          <input type="text" placeholder="Buscar " id="autocomplete_search" />
          <span id="search_result"></span>
        <span class="fas fa-search"></span>
        </li>
        </ul>
    </nav>
  </header>
  <div id="resultadosDiv"></div>
    <% for(let i=0;i<results3[0].cantidad;i++) { %>
        <section id="<%= results2[i].genero %>" class="carrusel">
        <h2><%= results2[i].genero %></h2>
        <div class="slider">
        <% results1.forEach((libro)=> { %>
        <% if(results2[i].genero == libro.genero) { %>
                <div class="image-container">
                <img src="bucket/<%=libro.img_libro %>" alt="Imagen 1">
                <p>DESCRIPCION:</p>
                <p>TITULO: <%= libro.titulo %></p>
                <p>AUTOR:<%= libro.nombreAutor %><%= libro.apellidosAutor %></p>
                <p>EDITORIAL: <%= libro.editorial %></p>
                <p>URL : <a href='bucket/<%= libro.pdf_url %>'>libro</a></p>
            </div>
            <% } %> 
            <% }) %>
        </div>
        </section>
    <% } %>

<!-- <script src="carrusel.js"></script>-->
</body>
</html>
<script src="javascripts/buscador.js"></script>